                        <Image url="@images/PlateauMerveille/ColosseDeRhodeus.jpg" />
                     </image>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="StatueDeZeus" fitHeight="91.0" fitWidth="176.0" onMouseClicked="#choix" pickOnBounds="true" preserveRatio="true">
