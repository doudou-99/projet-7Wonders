                     </image>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="JardinsSuspendus" fitHeight="100.0" fitWidth="167.0" onMouseClicked="#choix" pickOnBounds="true" preserveRatio="true">
