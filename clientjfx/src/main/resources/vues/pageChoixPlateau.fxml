                        <Image url="@images/PlateauMerveille/LeMausoleeDHalicarnasse.jpg" />
                     </image>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="ColosseDeRhodeus" fitHeight="92.0" fitWidth="173.0" onMouseClicked="#choix" pickOnBounds="true" preserveRatio="true">
